<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xmlns:ext="http://www.liquibase.org/xml/ns/dbchangelog-ext"
  xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.5.xsd
        http://www.liquibase.org/xml/ns/dbchangelog-ext http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-ext.xsd"
  logicalFilePath="org.everit.jira.custompermission">

  <include file="/META-INF/liquibase/virtualjira/jira.changelog.xml" context="lqmg" />

  <changeSet id="1.0.0" author="everit">
    <createTable tableName="everit_jira_global_permission">
      <column name="global_permission_id" type="bigint" autoIncrement="true">
        <constraints primaryKey="true" nullable="false" primaryKeyName="pk_everit_jira_glob_perm" />
      </column>
      <column name="permission_key" type="varchar(255)">
        <constraints nullable="false" />
      </column>
      <column name="group_id" type="bigint">
        <constraints foreignKeyName="fk_everit_jira_glob_perm_gr"
          referencedTableName="cwd_group" referencedColumnNames="id" />
      </column>
    </createTable>
    <createIndex tableName="everit_jira_global_permission" indexName="i_everit_jira_glob_perm_key">
      <column name="permission_key" />
    </createIndex>
    <addUniqueConstraint columnNames="permission_key,group_id" tableName="everit_jira_global_permission"
      constraintName="u_everit_jira_glob_perm_pk_gr" />

  </changeSet>

</databaseChangeLog>